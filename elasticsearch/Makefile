.PHONY: help up down restart logs logs-es logs-kibana ps health clean test-connection kibana

COMPOSE_FILE=docker-compose.yml

help:
	@echo "ğŸ” Elasticsearch Docker - Makefile Commands"
	@echo ""
	@echo "Basic Commands:"
	@echo "  make up              - Start Elasticsearch"
	@echo "  make down            - Stop Elasticsearch"
	@echo "  make restart         - Restart Elasticsearch"
	@echo "  make logs            - View all logs (follow mode)"
	@echo "  make logs-es         - View Elasticsearch logs only"
	@echo "  make ps              - Show running containers"
	@echo "  make health          - Check Elasticsearch health"
	@echo ""
	@echo "Kibana Commands:"
	@echo "  make kibana          - Start Elasticsearch + Kibana"
	@echo "  make logs-kibana     - View Kibana logs"
	@echo ""
	@echo "Maintenance Commands:"
	@echo "  make clean           - Stop and remove volumes (âš ï¸  deletes data)"
	@echo "  make reset           - Complete reset (stop, clean, restart)"
	@echo "  make test-connection - Test Elasticsearch connection"
	@echo ""
	@echo "Info Commands:"
	@echo "  make cluster-info    - Show cluster information"
	@echo "  make indices         - List all indices"
	@echo "  make nodes           - Show node information"
	@echo ""

# Basic Operations
up:
	@echo "ğŸš€ Starting Elasticsearch..."
	@if ! docker info > /dev/null 2>&1; then \
		echo "âŒ Docker is not running!"; \
		echo ""; \
		echo "Please start Docker Desktop first:"; \
		echo "  1. Open Docker Desktop application"; \
		echo "  2. Wait until Docker is running"; \
		echo "  3. Run 'make up' again"; \
		exit 1; \
	fi
	docker-compose -f $(COMPOSE_FILE) up -d elasticsearch
	@echo "âœ… Elasticsearch started!"
	@echo "ğŸ“ Elasticsearch: http://localhost:9200"
	@echo "â³ Waiting for Elasticsearch to be ready..."
	@sleep 5
	@make health

down:
	@echo "ğŸ›‘ Stopping Elasticsearch..."
	docker-compose -f $(COMPOSE_FILE) down
	@echo "âœ… Elasticsearch stopped!"

restart:
	@echo "ğŸ”„ Restarting Elasticsearch..."
	@make down
	@sleep 2
	@make up

# Logs
logs:
	@echo "ğŸ“œ Viewing logs (Ctrl+C to exit)..."
	docker-compose -f $(COMPOSE_FILE) logs -f

logs-es:
	@echo "ğŸ“œ Elasticsearch logs (Ctrl+C to exit)..."
	docker-compose -f $(COMPOSE_FILE) logs -f elasticsearch

logs-kibana:
	@echo "ğŸ“œ Kibana logs (Ctrl+C to exit)..."
	docker-compose -f $(COMPOSE_FILE) logs -f kibana

# Status
ps:
	@echo "ğŸ“‹ Running containers:"
	@docker-compose -f $(COMPOSE_FILE) ps

health:
	@echo "ğŸ¥ Checking Elasticsearch health..."
	@curl -s http://localhost:9200/_cluster/health?pretty 2>/dev/null || echo "âŒ Elasticsearch not responding"

# Kibana
kibana:
	@echo "ğŸš€ Starting Elasticsearch + Kibana..."
	docker-compose -f $(COMPOSE_FILE) --profile kibana up -d
	@echo "âœ… Elasticsearch + Kibana started!"
	@echo "ğŸ“ Elasticsearch: http://localhost:9200"
	@echo "ğŸ“ Kibana: http://localhost:5601"
	@echo "â³ Waiting for services to be ready..."
	@sleep 10
	@make health

# Maintenance
clean:
	@echo "âš ï¸  This will delete all Elasticsearch data!"
	@read -p "Are you sure? [y/N] " -n 1 -r; \
	echo; \
	if [[ $$REPLY =~ ^[Yy]$$ ]]; then \
		echo "ğŸ§¹ Cleaning up..."; \
		docker-compose -f $(COMPOSE_FILE) down -v; \
		echo "âœ… Cleanup complete!"; \
	else \
		echo "âŒ Cancelled"; \
	fi

reset:
	@echo "ğŸ”„ Resetting Elasticsearch..."
	docker-compose -f $(COMPOSE_FILE) down -v
	@sleep 2
	@make up

test-connection:
	@echo "ğŸ§ª Testing Elasticsearch connection..."
	@echo ""
	@echo "1. Cluster Health:"
	@curl -s http://localhost:9200/_cluster/health?pretty
	@echo ""
	@echo "2. Cluster Info:"
	@curl -s http://localhost:9200 | python3 -m json.tool 2>/dev/null || curl -s http://localhost:9200

# Info Commands
cluster-info:
	@echo "â„¹ï¸  Cluster Information:"
	@curl -s http://localhost:9200 | python3 -m json.tool 2>/dev/null || curl -s http://localhost:9200

indices:
	@echo "ğŸ“‘ Indices:"
	@curl -s "http://localhost:9200/_cat/indices?v"

nodes:
	@echo "ğŸ–¥ï¸  Nodes:"
	@curl -s "http://localhost:9200/_cat/nodes?v"

# Development helpers
create-test-index:
	@echo "ğŸ§ª Creating test index..."
	@curl -X PUT "localhost:9200/test-index" -H 'Content-Type: application/json' -d'{"settings": {"number_of_shards": 1,"number_of_replicas": 0}}'
	@echo ""
	@echo "âœ… Test index created!"

index-test-doc:
	@echo "ğŸ“ Indexing test document..."
	@curl -X POST "localhost:9200/test-index/_doc" -H 'Content-Type: application/json' -d'{"user": "test_user","message": "Hello from Makefile!","timestamp": "'$$(date -u +%Y-%m-%dT%H:%M:%SZ)'"}'
	@echo ""
	@echo "âœ… Document indexed!"

search-test:
	@echo "ğŸ” Searching test index..."
	@curl -s "localhost:9200/test-index/_search?pretty"

delete-test-index:
	@echo "ğŸ—‘ï¸  Deleting test index..."
	@curl -X DELETE "localhost:9200/test-index"
	@echo ""
	@echo "âœ… Test index deleted!"

# Quick tests
test: create-test-index index-test-doc search-test
	@echo ""
	@echo "âœ… All tests completed!"
	@echo "ğŸ’¡ Run 'make delete-test-index' to clean up"
