# Application
NODE_ENV=development
PORT=3010

# PostgreSQL Database (for Users/Auth)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=repath
DATABASE_SSL=false
DATABASE_POOL_SIZE=10

# MongoDB Database (for URLs)
MONGODB_URI=mongodb://localhost:27017/repath
MONGODB_DATABASE=repath
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2
MONGODB_SOCKET_TIMEOUT=45000
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ID Encryption
ID_ENCRYPTION_SALT=your-secret-salt-for-id-encryption-change-in-production
